<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UberEatsClone.Views.LandingPage"
             BackgroundColor="White">
    <VerticalStackLayout Padding="20" Spacing="30" VerticalOptions="Center">

        <!-- Image for Landing Page (Make sure the image is in Resources/Images) -->
        <Image Source="ubereats_logo.png" WidthRequest="200" HeightRequest="200" HorizontalOptions="Fill"/>

        <!-- Welcome Text -->
        <Label Text="Welcome to UberEatsClone"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="Black"/>

        <!-- Get Started Button -->
        <Button Text="Get Started"
                BackgroundColor="Green"
                TextColor="White"
                Clicked="OnGetStartedClicked"
                HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
