<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UberEatsClone.Views.AccountPage"
             Title="Account"
             BackgroundColor="#FFE0B2">
    <!-- Light caramel for warmth -->

    <VerticalStackLayout Padding="20" VerticalOptions="FillAndExpand">

        <!-- UberEats Logo -->
        <Image Source="ubereats_logo.png"
               HeightRequest="200"
               HorizontalOptions="Center"
               Margin="0,40,0,20"/>

        <!-- Profile Section -->
        <Image Source="user_profile.png"
               WidthRequest="100"
               HeightRequest="100"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               Margin="0,10,0,10"/>

        <Label Text="User Name"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <VerticalStackLayout VerticalOptions="EndAndExpand" Spacing="10">
            <Button Text="Edit Profile" BackgroundColor="Blue" TextColor="White"/>
            <Button Text="Logout" BackgroundColor="Red" TextColor="White"/>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>
