<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UberEatsClone.Views.HomePage"
             Title="Home"
             BackgroundColor="#FFFAE3">
    <!-- Warm food-inspired background -->

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="FillAndExpand">

        <!-- UberEats Logo (Large at Top) -->
        <Image Source="ubereats_logo.png"
               HeightRequest="200"
               HorizontalOptions="Center"
               Margin="0,40,0,20"/>

        <!-- Bottom Stack for Buttons -->
        <VerticalStackLayout VerticalOptions="EndAndExpand" Spacing="15">

            <Button Text="Browse Restaurants"
                    Clicked="OnBrowseClicked"
                    BackgroundColor="Green"
                    TextColor="White" />

            <Button Text="My Orders"
                    Clicked="OnOrdersClicked"
                    BackgroundColor="Blue"
                    TextColor="White" />

            <Button Text="My Account"
                    Clicked="OnAccountClicked"
                    BackgroundColor="Gray"
                    TextColor="White" />

        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>
